<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@drawable/farmer11"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="26dp"/>


    <EditText
        android:id="@+id/editText4"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:alpha="0.45"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"

        android:selectAllOnFocus="false"
        android:shadowColor="#00110101"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:alpha="0.45"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        android:shadowColor="#000F0101" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/editText8"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:alpha="0.45"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:ems="10"
        android:hint="ID Number"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:selectAllOnFocus="false"
        android:shadowColor="#00110101"
        android:singleLine="true" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background=" #a3a375"
        android:text="Register"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Existing Users Login Here"
        android:textAlignment="center"
        android:textColor="#000000" />


</LinearLayout>